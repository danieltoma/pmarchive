{
    "plugins": ["react"],
    "extends": ["google", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "generator-star-spacing": 0,
        "no-alert": 0,
        "indent": ["error", 4],
        "camelcase": "warn",
        "object-curly-spacing": ["error", "never"],
        "arrow-parens": ["error", "always"],
        "comma-dangle": ["warn", "always-multiline"],
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-single"],
        "no-negated-condition": ["warn"],
        "new-cap": ["warn"],
        "react/prefer-es6-class": ["warn", "always"]
    },
    "globals": {
        "__DEV__": false,
        "alert": false,
        "navigator": false,
        "document": false,
        "describe": false,
        "it": false,
        "expect": false,
        "FormData": false,
        "window": false,
    }
}
